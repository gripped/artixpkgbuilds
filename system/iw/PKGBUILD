pkgname=iw
pkgver=6.17
pkgrel=1
pkgdesc='nl80211 based CLI configuration utility for wireless devices'
arch=('x86_64')
url='https://wireless.wiki.kernel.org/en/users/documentation/iw'
license=('GPL')
depends=('libnl')
makedepends=('git' 'linux-api-headers')
validpgpkeys=('C0EBC440F6DA091C884D8532E0F373F37BF9099A') # Johannes Berg
source=("git+https://git.kernel.org/pub/scm/linux/kernel/git/jberg/iw.git#tag=v${pkgver}?signed")
sha256sums=('25cde7e1517f2b7bae36920dc8987c95ca61c5a953d0f004fe6ece17f59980c9')

build() {
  cd "${srcdir}/${pkgname}/"

  make
}

package() {
  cd "${srcdir}/${pkgname}/"

  make DESTDIR="${pkgdir}" SBINDIR="/usr/bin" install
}
