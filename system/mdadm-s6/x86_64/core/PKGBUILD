pkgname=mdadm-s6
pkgver=20210917
pkgrel=1
pkgdesc="s6-rc service scripts for mdadm"
arch=('any')
url="https://gitea.artixlinux.org/artix/s6-services"
groups=('s6-system')
provides=('init-mdadm')
conflicts=('init-mdadm')
depends=('mdadm' 's6-base')
makedepends=('git')
_commit=4e024337a13def263e1b81e64edb0ff821fecceb
backup=('etc/s6/config/mdadm.conf')
source=("git+https://gitea.artixlinux.org/artix/s6-services.git#commit=$_commit")
sha256sums=('SKIP')

package() {
    cd "${srcdir}"/s6-services
    sh install.sh "mdadm" "${pkgdir}"
}
