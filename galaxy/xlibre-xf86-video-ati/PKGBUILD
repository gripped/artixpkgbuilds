# Maintainer: artist for Artix Linux

pkgname=xlibre-xf86-video-ati
_pkgname=xf86-video-ati
pkgver=22.0.0.2
pkgrel=9
pkgdesc="XLibre fork of X.Org ati video driver"
arch=('x86_64')
url="https://github.com/X11Libre"
license=('MIT')
depends=('libudev' 'mesa' 'libpciaccess' 'libdrm' 'glibc')
makedepends=('xlibre-xserver-devel' 'udev' 'X-ABI-VIDEODRV_VERSION=28.0')
conflicts=(${_pkgname} 'X-ABI-VIDEODRV_VERSION<28' 'X-ABI-VIDEODRV_VERSION>=29')
provides=(${_pkgname})
groups=('xlibre-drivers')
source=("https://codeload.github.com/X11Libre/${_pkgname}/tar.gz/refs/tags/${pkgname}-${pkgver}")

build() {
  cd ${_pkgname}-${pkgname}-${pkgver}
  export CFLAGS=${CFLAGS/-fno-plt}
  export CXXFLAGS=${CXXFLAGS/-fno-plt}
  export LDFLAGS=${LDFLAGS/-Wl,-z,now}

  ./autogen.sh --prefix=/usr --enable-glamor --disable-debug
  ./configure --prefix=/usr
  make
}

check() {
  cd ${_pkgname}-${pkgname}-${pkgver}
  make check
}

package() {
  cd ${_pkgname}-${pkgname}-${pkgver}
  make "DESTDIR=${pkgdir}" install

  install -Dm644 "${srcdir}"/${_pkgname}-${pkgname}-${pkgver}/COPYING "${pkgdir}"/usr/share/licenses/${pkgname}/LICENSE
}

sha256sums=('f6b736d462f59aa5c23960d2579fec575215f90c445577c6fab2490447a19579')
