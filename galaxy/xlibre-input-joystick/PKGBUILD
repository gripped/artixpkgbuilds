# Maintainer: artist for Artix Linux

pkgname=xlibre-input-joystick
_pkgname=xf86-input-joystick
pkgver=1.6.4.2
pkgrel=1.1
pkgdesc="XLibre fork of X.Org input driver that translates joystick input to mouse and keyboard events. (Do not use for games with native joystick support or XI2 applications. See manpage.)"
arch=(x86_64)
license=('custom')
url="https://github.com/X11Libre"
depends=('glibc')
makedepends=('xlibre-xserver-devel' 'X-ABI-XINPUT_VERSION=26.0' 'xorgproto' 'git')
conflicts=("xlibre-${_pkgname}" 'xorg-server<21.1.1' 'X-ABI-XINPUT_VERSION<26' 'X-ABI-XINPUT_VERSION>=27')
provides=("xlibre-${_pkgname}" "${_pkgname}")
replaces=("xlibre-${_pkgname}")
options=('!debug')
source=("${url}/${_pkgname}/archive/refs/tags/xlibre-${_pkgname}-${pkgver}.tar.gz")
groups=('xlibre-drivers')

build() {
  cd ${_pkgname}-xlibre-${_pkgname}-${pkgver}

  NOCONFIGURE=1 ./autogen.sh
  ./configure \
    --prefix=/usr

  make
}

package() {
  cd ${_pkgname}-xlibre-${_pkgname}-${pkgver}

  make DESTDIR="${pkgdir}" install

  install -Dvm644 README.md "${pkgdir}/usr/share/doc/xlibre-${_pkgname}/README.md"
  install -Dvm644 COPYING "${pkgdir}/usr/share/licenses/xlibre-${_pkgname}/COPYING"
}
sha256sums=('fdd994915e97fe51a521798af5bfdfbe3dd5d2f10048a65358617b4c347a5aa1')

