type            = process
command         = /usr/bin/ejabberdctl foreground --logs /dev/null
stop-command    = /usr/bin/ejabberdctl stop
smooth-recovery = true
load-options    = export-passwd-vars
working-dir     = /var/lib/ejabberd
run-as          = jabber
depends-on      = network.target
before          = login.target
logfile         = /var/log/dinit/ejabberd.log
