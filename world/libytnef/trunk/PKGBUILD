# Contributor: Andre Klitzing <aklitzing () online () de>

pkgname=libytnef
pkgver=2.1.1
pkgrel=2
epoch=1
pkgdesc="Yerase's TNEF stream reader library (decodes winmail.dat)"
arch=('x86_64')
url='https://github.com/Yeraze/ytnef'
license=('GPL')
depends=('glibc')
optdepends=('perl: ytnefprocess command')
source=("https://github.com/Yeraze/ytnef/archive/v$pkgver/$pkgname-$pkgver.tar.gz")
sha256sums=('ce702b90c0572159548c468f070c7a03b3329066d7a4824fb74302603132c33f')

prepare() {
  cd ytnef-$pkgver
  ./autogen.sh
}

build() {
  cd ytnef-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd ytnef-$pkgver
  make DESTDIR="$pkgdir" install
}
