# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=libwhich
pkgver=1.3.0
pkgrel=1
pkgdesc='Like `which`, for dynamic libraries'
arch=(x86_64)
url='https://github.com/vtjnash/libwhich'
license=(MIT)
depends=(glibc)
makedepends=(git)
source=(git+https://github.com/vtjnash/libwhich#tag=v$pkgver)
sha256sums=('bd36fab804031532b9ef2a396ee18d981eb2a449059b3e508d300512610f7c3d')

build() {
  cd $pkgname
  make
}

package() {
  cd $pkgname
  install -Dm755 libwhich -t "$pkgdir"/usr/bin
  install -Dm644 LICENSE -t "$pkgdir"/usr/share/licenses/$pkgname
}
