pkgname=(brltty brltty-udev-generic)
pkgver=6.6
pkgrel=7
pkgdesc="Braille display driver for Linux/Unix"
arch=(x86_64)
url="https://brltty.app"
license=(LGPL-2.1-or-later)
makedepends=(
  alsa-lib
  at-spi2-atk
  at-spi2-core
  atk
  bluez-libs
  cython0
  dbus
  dracut
  espeak-ng
