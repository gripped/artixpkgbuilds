  ocaml-findlib
  pcre2
  polkit
  python-setuptools
  speech-dispatcher
  strip-nondeterminism
  libelogind
  tcl
)
options=(!emptydirs)
source=(
  https://brltty.app/archive/$pkgname-$pkgver.tar.bz2
  0001-brlapi-use-elogind-instead-of-systemd.patch
  $pkgname-6.4-x11_autostart.patch
)
