pkgname=conmon
pkgver=2.2.1
pkgrel=1
epoch=1
pkgdesc='OCI container runtime monitor'
arch=(x86_64)
url='https://github.com/containers/conmon'
license=(APACHE)
depends=(glibc glib2)
makedepends=(git)
source=(
  "git+https://github.com/containers/conmon#commit=v${pkgver}"
)
b2sums=('eeb41e92494d2464af1bc47c4c7fda14256336e0ad16ef7c708e302b2b8fbd0537b7584fbf451970d6cdf380b9b1461058c72b36cc058ecfc107626a962cf98b')

build() {
  cd conmon
  make PREFIX=/usr LIBEXECDIR=/usr/lib DESTDIR="$pkgdir"
}

package() {
  install -Dm755 conmon/bin/conmon "$pkgdir/usr/bin/conmon"
}
