pkgname=conmon
pkgver=2.2.0
pkgrel=1
epoch=1
pkgdesc='OCI container runtime monitor'
arch=(x86_64)
url='https://github.com/containers/conmon'
license=(APACHE)
depends=(glibc glib2)
makedepends=(git)
source=(
  "git+https://github.com/containers/conmon#commit=v${pkgver}"
)
b2sums=('03881857748f3a8071cf0c9832fe98213aa92286e159273e244325a45b74081332480458185e05b92f151337698c936a6969c10b688d1bf9bc010960b71781c9')

build() {
  cd conmon
  make PREFIX=/usr LIBEXECDIR=/usr/lib DESTDIR="$pkgdir"
}

package() {
  install -Dm755 conmon/bin/conmon "$pkgdir/usr/bin/conmon"
}
