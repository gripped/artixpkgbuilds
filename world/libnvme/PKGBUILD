# Maintainer: Morten Linderud <foxboron@archlinux.org>

pkgname=libnvme
pkgver=1.8
pkgrel=2
pkgdesc="C Library for NVM Express on Linux"
arch=('x86_64')
url="https://github.com/linux-nvme/libnvme"
license=('LGPL2.1')
makedepends=('udev' 'meson' 'asciidoc' 'python' 'swig')
depends=('json-c' 'openssl' 'keyutils' 'dbus')
source=(
	"$pkgname-$pkgver.tar.gz::https://github.com/linux-nvme/${pkgname}/archive/v${pkgver}.tar.gz"
)
sha256sums=('d59939a280eec41eb7a716e1681d0d0c612099385204ffb55d07134a6be08d75')

build() {
	cd "${pkgname}-${pkgver}"
    artix-meson \
	-Dlibdbus=auto \
	-Ddocs-build=true \
	.build
}

package() {
	cd "${pkgname}-${pkgver}"
	DESTDIR="$pkgdir" meson install -C .build
}
